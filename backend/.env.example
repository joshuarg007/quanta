# =============================================================================
# QUANTA Backend Configuration
# Copy to .env and customize
# =============================================================================

# Environment: development | staging | production
QUANTA_ENVIRONMENT=development
QUANTA_DEBUG=true

# =============================================================================
# AXION DEEP LABS (DRIFT Research)
# =============================================================================
# Set this to the Organization ID for Axion Deep Labs after first signup.
# This org gets unlimited access for DRIFT research.
# 0 = not set (fail-safe, no unlimited access)
QUANTA_AXION_ORG_ID=0

# Domain for auto-assignment of Axion employees
QUANTA_AXION_DOMAIN=axiondeep.com

# =============================================================================
# DATABASE
# =============================================================================
# SQLite for development
QUANTA_DATABASE_URL=sqlite:///./quanta.db

# PostgreSQL for production (example)
# QUANTA_DATABASE_URL=postgresql://user:password@localhost:5432/quanta

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# CRITICAL: Generate a secure key for production!
# python -c "import secrets; print(secrets.token_urlsafe(32))"
QUANTA_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_SECRETS_TOKEN_URLSAFE_32
QUANTA_ALGORITHM=HS256
QUANTA_ACCESS_TOKEN_EXPIRE_MINUTES=15
QUANTA_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# COOKIES (for production with HTTPS)
# =============================================================================
QUANTA_COOKIE_SECURE=false
QUANTA_COOKIE_SAMESITE=lax
# QUANTA_COOKIE_DOMAIN=.axiondeep.com

# =============================================================================
# CORS (add your frontend URLs)
# =============================================================================
# Comma-separated list handled by Pydantic
# Set via environment or leave defaults in config.py

# =============================================================================
# QUANTUM SIMULATION
# =============================================================================
QUANTA_MAX_QUBITS=16
QUANTA_DEFAULT_SHOTS=1024

# =============================================================================
# DEFAULT LIMITS (Cost Control)
# =============================================================================
# Free tier
QUANTA_DEFAULT_SIMULATION_RUNS_LIMIT=100
QUANTA_DEFAULT_CIRCUITS_LIMIT=10
QUANTA_DEFAULT_STORAGE_BYTES_LIMIT=52428800

# Education tier (pro bono)
QUANTA_EDUCATION_SIMULATION_RUNS_LIMIT=500
QUANTA_EDUCATION_CIRCUITS_LIMIT=50
QUANTA_EDUCATION_STORAGE_BYTES_LIMIT=104857600

# Axion/Research tier (-1 = unlimited)
QUANTA_AXION_SIMULATION_RUNS_LIMIT=-1
QUANTA_AXION_CIRCUITS_LIMIT=-1
QUANTA_AXION_STORAGE_BYTES_LIMIT=-1
QUANTA_AXION_EXPERIMENTS_LIMIT=-1
QUANTA_AXION_EXPERIMENT_RUNS_LIMIT=-1

# =============================================================================
# STRIPE (for add-on purchases)
# =============================================================================
QUANTA_STRIPE_SECRET_KEY=
QUANTA_STRIPE_WEBHOOK_SECRET=

# =============================================================================
# EMAIL (for verification - future)
# =============================================================================
QUANTA_EMAIL_ENABLED=false
QUANTA_SMTP_HOST=
QUANTA_SMTP_PORT=587
QUANTA_SMTP_USERNAME=
QUANTA_SMTP_PASSWORD=
QUANTA_EMAIL_FROM_ADDRESS=noreply@axiondeep.com
QUANTA_EMAIL_FROM_NAME=QUANTA

# =============================================================================
# SECURITY
# =============================================================================
QUANTA_MAX_FAILED_LOGIN_ATTEMPTS=5
QUANTA_LOCKOUT_DURATION_MINUTES=15

# =============================================================================
# FRONTEND
# =============================================================================
QUANTA_FRONTEND_BASE_URL=http://localhost:5173
